<?xml version="1.0" encoding="utf-8"?>
<androidx.constraintlayout.widget.ConstraintLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="@color/gray_100"
    xmlns:app="http://schemas.android.com/apk/res-auto">

    <View
        android:id="@+id/iv_logo"
        android:layout_width="34dp"
        android:layout_height="34dp"
        android:background="@drawable/bg_rect_gray600_r10"
        app:layout_constraintTop_toTopOf="parent"
        app:layout_constraintStart_toStartOf="parent" />

    <TextView
        android:id="@+id/tv_notification_title"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="짝꿍 레벨업"
        android:textAppearance="@style/Typography.Body4.SemiBold"
        android:textColor="@color/gray_800"
        app:layout_constraintTop_toTopOf="parent"
        app:layout_constraintStart_toStartOf="@+id/iv_logo"/>

    <TextView
        android:id="@+id/tv_notification_content"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="짝꿍이 레벨2로 성장했어요.\n성장한 짝꿍의 모습이 궁금하시다면 클릭!"
        android:textAppearance="@style/Typography.Paragraph2.14dp"
        android:textColor="@color/gray_600"
        app:layout_constraintTop_toBottomOf="@+id/tv_notification_title"
        app:layout_constraintStart_toStartOf="@+id/tv_notification_title"/>

    <TextView
        android:id="@+id/tv_time"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="09:00"
        android:textAppearance="@style/Typography.Body4.SemiBold"
        android:textColor="@color/gray_500"
        app:layout_constraintTop_toBottomOf="@+id/tv_notification_content"
        app:layout_constraintStart_toStartOf="@+id/tv_notification_content"/>
</androidx.constraintlayout.widget.ConstraintLayout>
