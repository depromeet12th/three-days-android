<resources>
    <!-- Base application theme. -->
    <style name="Theme.ThreeDays" parent="Theme.MaterialComponents.DayNight.NoActionBar">
        <!-- Primary brand color. -->
        <item name="colorPrimary">@color/primary</item>
        <item name="colorPrimaryVariant">@color/press</item>
        <item name="colorOnPrimary">@color/white</item>
        <!-- Secondary brand color. -->
        <item name="colorSecondary">@color/blue_50</item>
        <item name="colorSecondaryVariant">@color/blue_10</item>
        <item name="colorOnSecondary">@color/black</item>
        <!-- Status bar color. -->
        <item name="android:statusBarColor">@color/home_background</item>
        <!-- Customize your theme here. -->

        <item name="android:windowLightStatusBar">true</item>
    </style>
</resources>
